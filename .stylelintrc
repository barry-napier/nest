{
  "extends": ["stylelint-config-recommended"],
  "plugins": ["stylelint-value-no-unknown-custom-properties"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["layer"]
      }
    ],
    "no-empty-source": null,
    "no-unknown-custom-properties": [
      true,
      {
        "ignoreProperties": ["/^--/"],
        "ignoreSelectors": [":root", ":where(:root)"]
      }
    ]
  }
}
